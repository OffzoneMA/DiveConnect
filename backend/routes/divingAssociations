const express = require('express');
const router = express.Router();
const divingAssociationController = require('../controllers/divingAssociationController');

// Get all diving associations
router.get('/', divingAssociationController.getAllDivingAssociations);

// Get diving association by ID
router.get('/:id', divingAssociationController.getDivingAssociationById);

// Create a new diving association
router.post('/', divingAssociationController.createDivingAssociation);

// Update a diving association
router.put('/:id', divingAssociationController.updateDivingAssociation);

// Delete a diving association
router.delete('/:id', divingAssociationController.deleteDivingAssociation);

module.exports = router;