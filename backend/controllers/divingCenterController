const divingCenterService = require('../services/divingCenterService');

exports.getAllDivingCenters = async (req, res) => {
  try {
    const divingCenters = await divingCenterService.getAllDivingCenters();
    res.json(divingCenters);
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
};

exports.getDivingCenterById = async (req, res) => {
  try {
    const divingCenter = await divingCenterService.getDivingCenterById(req.params.id);
    res.json(divingCenter);
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
};

exports.createDivingCenter = async (req, res) => {
  try {
    const divingCenter = await divingCenterService.createDivingCenter(req.body);
    res.status(201).json(divingCenter);
  } catch (err) {
    res.status(400).json({ error: err.message });
  }
};

exports.updateDivingCenter = async (req, res) => {
  try {
    const updatedDivingCenter = await divingCenterService.updateDivingCenter(req.params.id, req.body);
    res.json(updatedDivingCenter);
  } catch (err) {
    res.status(400).json({ error: err.message });
  }
};

exports.deleteDivingCenter = async (req, res) => {
  try {
    await divingCenterService.deleteDivingCenter(req.params.id);
    res.status(204).send();
  } catch (err) {
    res.status(400).json({ error: err.message });
  }
};
    