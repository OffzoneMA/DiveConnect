const divingAssociationService = require('../services/divingAssociationService');

exports.getAllDivingAssociations = async (req, res) => {
  try {
    const divingAssociations = await divingAssociationService.getAllDivingAssociations();
    res.json(divingAssociations);
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
};

exports.getDivingAssociationById = async (req, res) => {
  try {
    const divingAssociation = await divingAssociationService.getDivingAssociationById(req.params.id);
    res.json(divingAssociation);
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
};

exports.createDivingAssociation = async (req, res) => {
  try {
    const divingAssociation = await divingAssociationService.createDivingAssociation(req.body);
    res.status(201).json(divingAssociation);
  } catch (err) {
    res.status(400).json({ error: err.message });
  }
};

exports.updateDivingAssociation = async (req, res) => {
  try {
    const updatedDivingAssociation = await divingAssociationService.updateDivingAssociation(req.params.id, req.body);
    res.json(updatedDivingAssociation);
  } catch (err) {
    res.status(400).json({ error: err.message });
  }
};

exports.deleteDivingAssociation = async (req, res) => {
  try {
    await divingAssociationService.deleteDivingAssociation(req.params.id);
    res.status(204).send();
  } catch (err) {
    res.status(400).json({ error: err.message });
  }
};
