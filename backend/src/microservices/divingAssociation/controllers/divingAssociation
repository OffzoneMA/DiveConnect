const DivingAssociation = require('../models/DivingAssociation');
const divingAssociationServices = require('../services/divingAssociation');

exports.getAllDivingAssociations = async (req, res) => {
  try {
    const divingAssociations = await divingAssociationServices.getAllDivingAssociations();
    res.status(200).json(divingAssociations);
  } catch (error) {
    res.status(500).json({ message: error.message });
  }
};

exports.getDivingAssociationById = async (req, res) => {
  try {
    const divingAssociation = await divingAssociationServices.getDivingAssociationById(req.params.id);
    if (!divingAssociation) {
      return res.status(404).json({ message: 'Diving Association not found' });
    }
    res.status(200).json(divingAssociation);
  } catch (error) {
    res.status(500).json({ message: error.message });
  }
};

exports.createDivingAssociation = async (req, res) => {
  try {
    const newDivingAssociation = await divingAssociationServices.createDivingAssociation(req.body);
    res.status(201).json(newDivingAssociation);
  } catch (error) {
    res.status(500).json({ message: error.message });
  }
};

exports.updateDivingAssociation = async (req, res) => {
  try {
    const updatedDivingAssociation = await divingAssociationServices.updateDivingAssociation(req.params.id, req.body);
    if (!updatedDivingAssociation) {
      return res.status(404).json({ message: 'Diving Association not found' });
    }
    res.status(200).json(updatedDivingAssociation);
  } catch (error) {
    res.status(500).json({ message: error.message });
  }
};

exports.deleteDivingAssociation = async (req, res) => {
  try {
    const deletedDivingAssociation = await divingAssociationServices.deleteDivingAssociation(req.params.id);
    if (!deletedDivingAssociation) {
      return res.status(404).json({ message: 'Diving Association not found' });
    }
    res.status(200).json({ message: 'Diving Association deleted successfully' });
  } catch (error) {
    res.status(500).json({ message: error.message });
  }
};
